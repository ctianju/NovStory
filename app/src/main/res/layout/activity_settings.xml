<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.liyeyu.novstory.view.AppBarHeadView
        android:id="@+id/head_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="MusicItemTitleText"
            android:text="@string/setting_open_window"
            />

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <CheckBox
            android:id="@+id/setting_window"
            android:background="@drawable/selector_check_box"
            android:layout_height="24dp"
            android:layout_width="48dp"
            android:button="@null" />
    </LinearLayout>
    <View
        android:background="@color/divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
</LinearLayout>
